<style>
    * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    scroll-padding-top: 2rem;
    scroll-behavior: smooth;
    list-style: none;
    text-decoration: none;
    font-family: 'Poppins', sans-serif;
}

    :root {
        --main-color: #fe5b3d;
        --second-color: #ffac38;
        --text-color: #444;
        --gardient: linear-gardient(#fe5b3d, #ffac38);

    }

    html::-webkit-scrollbar {
        width: 0.5rem;
        background: transparent;
    }

    html::-webkit-scrollbar-track {
        background: transparent;
    }

    html::-webkit-scrollbar-thumb {
        background: var(--text-color);
        border-radius: 5rem;
    }

    section {
        padding: 40px 100px;
    }

    .parts .heading {
    margin-top: 10px;
}

.parts-container {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    margin-top: 2rem;
    
}

.parts-container .box {
    flex: 0.5 0.5 15rem;
    position: relative;
    padding: 20px;
    display: flex;
    flex-direction: column;
    background: #f6f6f6;
    border-radius: 0.5rem;
    box-shadow: 5px 5px 5px 5px rgb(170, 97, 97);
}


.parts-container .box img {
    width: 100%;
    height: 250px;
    object-fit: contain;
    object-position: center;
    margin-bottom: 1rem;
}

.parts-container .box img:hover {
    transform: scale(1.2);
    transition: 0.5s;
    cursor: pointer;
}

.parts-container .box h3 {
    font-size: 1.1rem;
    font-weight: 600;
}

.parts-container .box span {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--main-color);
}

.parts-container .box .bx {
    color: var(--main-color);
    margin: 0.8rem 0;
}

.parts-container .box .btn {
    text-align: center;
    max-width: 120px;
    background-color: #f70a31;
    border-radius: 10px;
    padding: 10px;
    color: #f6f6f6;
    border: 1px solid whitesmoke;
    font-weight: 900;
}

.parts-container .box .btn:hover {
    transform: scale(1.1);
    transition: 0.5s;
    cursor: pointer;
}

.parts-container .box i{
    font-size: 1.2rem;
}

.parts-container .box .details {
    color: 	#32CD32;
    display: flex;
    align-items: center;
    position: absolute;
    bottom: 1.8rem;
    right: 1rem;
    font-size: 1.1rem;
    color: var(--text-color);
}

.parts-container .box .details:hover {
    color: 	#FF4500;
    transition: 0.5s;
    transform: scale(0.8);
    text-decoration:none;
}

.heading span {
    margin-left: 270px;
    font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    font-weight: bold;
    font-size: 35px;
    letter-spacing: 1px;
    color: rgba(255, 70, 137, 1);
}

.heading h2 {
    font-size: 30px;
    font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    font-weight:700;
    color: rgba(169, 157, 255, 1);
    margin-left: 240px;
}

.box {
    margin-top: 40px;
    max-width: 400px;
    width: 100%;
}

.box .search-box {
    left: 200%;
    height: 50px;
    max-width: 50px;
    position:relative;
    margin: auto;
    box-shadow: 0 5px 10px rgba(0,0,0,0.25);
    border-radius: 25px;
    transition: all 0.3s ease;
} 

#check:checked ~ .search-box {
    max-width: 380px;
}

.search-box input {
    position: absolute;
    height: 100%;
    width: 100%;
    border-radius: 25px;
    background: #fff;
    outline: none;
    border: none;
    padding-left: 20px;
    font-size: 18px;
}

.search-box .icon {
    position: absolute;
    right: -2px;
    top: 0;
    width: 50px;
    background: #fff;
    height: 100%;
    text-align: center;
    line-height: 50px;
    color: #ff676d;
    font-size: 20px;
    border-radius: 25px;
}

#check:checked ~ .search-box .icon {
    background: #ff676d;
    color: #fff;
    width: 60px;
    border-radius: 0 25px 25px 0;
}

#check{
    display: none;
}



#a {
    position: relative;
    background: #BC8F8F;
    color: #fff;
    text-decoration: none;
    font-size: 1.3em;
    font-weight:400;
    padding: 10px 30px;
    transition: 0.5s ease;
}

#a:hover {
    letter-spacing: 0.1em;
    background: var(--crl);
    box-shadow: 0 0 35px var(--crl);
}
</style>


<form class="search_form" method="post" asp-controller="Client" asp-action="Search">
<div class="box">
    <input type="checkbox" id="check"  />
    <div class="search-box">
    <input type="search" placeholder="Search" name="keyword" required />
        <label for="check" class="icon">
            <i class="fas fa-search"></i>
        </label>
    </div>
</div>
</form>

@if(TempData["Message"] != null)
{
    <h3 class="alert-danger mt-5 text-center">@TempData["Message"]</h3>
}
else
{


    <a id="a" style="--crl:#00BFFF;" asp-controller="Client" asp-action="SortAscName" class="btn btn-primary">Name <i class="bi bi-arrow-up-square"></i></a>
    <a id="a" style="--crl:#FF0000; margin-left:20px;" asp-controller="Client" asp-action="SortDscName" class="btn btn-success">Name <i class="bi bi-arrow-down-square"></i></a>

    <a id="a" style="--crl:#663399; margin-left:20px;" asp-controller="Client" asp-action="SortAscPrice" class="btn btn-danger ">Price <i class="bi bi-currency-dollar"></i><i class="bi bi-arrow-up-square"></i></a>
    <a id="a" style="--crl:#20B2AA; margin-left:20px;" asp-controller="Client" asp-action="SortDscPrice" class="btn btn-warning ">Price <i class="bi bi-currency-dollar"></i><i class="bi bi-arrow-down-square"></i></a>


            <section id="parts" class="parts">
    
                <div class="heading">
                    <span>All Books of Library</span>
                    <h2>Our Book Is Always Execelent</h2>
                </div>
                <div class="parts-container container">
                    @foreach (var books in Model)
                    {
                    <div class="box">
                        <img src="@books.Image" alt="">
                         <h3>@books.Title</h3>
                         <span>@books.Price $</span>
                         <i class="bx bxs-star"><i class="bx bxs-star"></i><i class="bx bxs-star"></i><i class="bx bxs-star"></i><i class="bx bxs-star"></i> 1000Views</i>
                         @if (books.Quantity == 0)
                         {
                            <h6 class="card-title">Out of Stock. Please come back later.</h6>

                         }
                         else
                         {
                            <a asp-controller="Client" asp-action="Detail" asp-route-id="@books.Id" class="btn">Buy Now</a>
                            <a class="details" asp-controller="Client" asp-action="Detail" asp-route-id="@books.Id">View Details</a>
                         }
                    </div>
                    }
                </div>
            </section>
            }







	
				