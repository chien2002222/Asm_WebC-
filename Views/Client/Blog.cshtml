@{
    Layout = "_Layout1";
}


<style>
     .contactUS {
         margin-top: 20px;
         background: linear-gradient(90deg, #f08d8d 0%, #f7e26b 30%, #e6e078 40%, #60c6f6 100%);
         padding: 0px 100px;
         font-family: 'Roboto', sans-serif;
     }

     .contact-us {
         position: relative;
         width: 100%;
         padding: 40px 100px;
     }

         .contact-us .title {
             display: flex;
             justify-content: center;
             align-items: center;
             font-size: 1.5rem;
         }

             .contact-us .title h2 {
                 margin-top: 10px;
                 color: rgb(250, 42, 42);
                 font-weight: bold;
             }

     .form {
         grid-area: form;
     }

     .info {
         grid-area: info;
     }

     .map {
         grid-area: map;
     }

     .contact {
         padding: 40px;
         background: #fff;
         box-shadow: 0 5px 35px rgba(0, 0, 0, 0.15);
     }

         .contact h3 {
             color: #0e3959;
             font-weight: bold;
             font-size: 1.5rem;
             margin-bottom: 10px;
             text-align: center;
         }


     .formBox {
         position: relative;
         width: 100%;
     }

         .formBox .row50 {
             display: flex;
             gap: 20px;
         }

     .inputBox {
         display: flex;
         flex-direction: column;
         margin-bottom: 10px;
         width: 50%;
     }

     .formBox .row100 .inputBox {
         width: 100%;
     }

     .inputBox span {
         color: #03a8f5;
         margin-top: 10px;
         margin-bottom: 5px;
         font-weight: bold;
     }

     .inputBox input {
         padding: 10px;
         font-size: 1.1rem;
         outline: none;
         border: 1px solid #333;
         border-radius: 20px;
     }

     .inputBox textarea {
         padding: 10px;
         font-size: 1.1rem;
         outline: none;
         border: 1px solid #333;
         resize: none;
         min-height: 220px;
         margin-bottom: 10px;
         border-radius: 10px;
     }

     .inputBox input[type="submit"] {
         background: #ff578b;
         color: #fff;
         border: none;
         font-size: 1.1rem;
         max-width: 120px;
         font-weight: bold;
         cursor: pointer;
         padding: 14px 15px;
     }

     .inputBox::placeholder {
         color: #a5a6a7;
     }


     .info {
         background: #0e3959;
     }

         .info h3 {
             color: #fff;
             font-weight: bold;
         }

         .info .infoBox div {
             display: flex;
             align-items: center;
             margin-bottom: 10px;
         }

             .info .infoBox div span {
                 min-width: 40px;
                 height: 40px;
                 color: #fff;
                 background: #18b7ff;
                 display: flex;
                 justify-content: center;
                 align-items: center;
                 font-size: 1.5rem;
                 border-radius: 50%;
                 margin-right: 15px;
             }

             .info .infoBox div p {
                 color: #fff;
             }

             .info .infoBox div a {
                 color: #fff;
                 text-decoration: none;
                 font-size: 1.1rem;
             }

     .sci {
         margin-top: 40px;
         display: flex;
     }

         .sci li {
             list-style: none;
             margin-right: 20px;
         }

             .sci li a {
                 color: #fff;
                 font-size: 2rem;
                 color: #ccc;
             }

                 .sci li a:hover {
                     color: #fff;
                 }


     .map {
         padding: 0;
     }

         .map iframe {
             width: 100%;
             height: 100%;
         }

     .box {
         position: relative;
         display: grid;
         grid-template-columns: 2fr 1fr;
         grid-template-rows: 5fr 4fr;
         grid-template-areas:
             "form info"
             "form map";
         grid-gap: 20px;
         margin-top: 20px;
         margin-left: -100px;
     }
</style>

<section class="contactUS">
    <div class="contact-us">
        <div class="title">
            <h2>GET IN TOUCH</h2>
        </div>
        <div class="box">
            <div class="contact form">
                <h3>Send a message</h3>
                <form action="#">
                    <div class="formBox">
                        <div class="row50">
                            <div class="inputBox">
                                <span>First Name</span>
                                <input type="text" placeholder="Enter your first name">
                            </div>
                            <div class="inputBox">
                                <span>Last Name</span>
                                <input type="text" placeholder="Enter your last name">
                            </div>
                        </div>
                        <div class="row50">
                            <div class="inputBox">
                                <span>Email</span>
                                <input type="text" placeholder="example@gmail.com">
                            </div>
                            <div class="inputBox">
                                <span>Phone</span>
                                <input type="text" placeholder="0900123456">
                            </div>
                        </div>
                        <div class="row100">
                            <div class="inputBox">
                                <span>Message</span>
                                <textarea placeholder="Enter your message"></textarea>
                            </div>
                        </div>
                        <div class="row100">
                            <div class="inputBox">
                                <input type="submit" value="Send">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="contact info">
                <h3>Contact Info</h3>
                <div class="infoBox">
                    <div>
                        <span><i class='bx bx-location-plus'></i></span>
                        <p>University of Greenwich <br>VietNam</p>
                    </div>
                    <div>
                        <span><i class='bx bx-envelope'></i></span>
                        <a href="#">truongquocbao@gmail.com</a>
                    </div>
                    <div>
                        <span><i class='bx bx-phone'></i></span>
                        <a href="#">0971558555</a>
                    </div>
                    <ul class="sci">
                        <li><a href="#"><i class='bx bxl-facebook'></i></a></li>
                        <li><a href="#"><i class='bx bxl-twitter'></i></a></li>
                        <li><a href="#"><i class='bx bxl-instagram'></i></a></li>
                        <li><a href="#"><i class='bx bxl-youtube'></i></a></li>
                        <li><a href="#"><i class='bx bxl-linkedin-square'></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="contact map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3341.1312393781845!2d105.7881568145534!3d21.02381109332397!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x313454b329f68977%3A0x6ddf5ff1e829fc56!2zxJDhuqFpIEjhu41jIEdyZWVud2ljaCBWaeG7h3QgTmFt!5e1!3m2!1svi!2s!4v1671468065988!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</section>