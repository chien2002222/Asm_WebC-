</head>

@* navbar-light bg-white border-bottom box-shadow mb-3"*@
  <body>
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm"
             style="background-color:#778899 ">
            <div class="container" >
                <a class="navbar-brand text-light" asp-area="" asp-controller="Client" asp-action="Index"> FPTBookShop</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1" style="margin-left:100px">
                        @if(User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                        {
                            <li class="nav-item" style="margin-right:30px">
                                <a style="font-size: 20px; font-weight: bold" class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Index">Request Approval</a>
                            </li>
                            <li class="nav-item" style="margin-right:30px">
                                <a style="font-size: 20px; font-weight: bold" class="nav-link text-light" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                            </li>
                            <li class="nav-item" >
                                <a style="font-size: 20px; font-weight: bold" class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Customer">User Account</a>
                            </li>
                           
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("BookOwner"))
                        {
                            <li class="nav-item" style="margin-right:30px">
                                <a style="font-size: 20px; font-weight: bold" class="nav-link text-light" asp-area="" asp-controller="Book" asp-action="Index">Book</a>
                            </li>
                            <li class="nav-item" style="margin-right:30px">
                                <a style="font-size: 20px; font-weight: bold" class="nav-link text-light" asp-area="" asp-controller="Category" asp-action="Request" >Request</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-size: 20px; font-weight: bold" class="nav-link text-light" style="margin-right:30px" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                            </li>
                            <li class="nav-item">
                                <a style="font-size: 20px; font-weight: bold" class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="Record">Order</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
        </header>



    <div class="container" style="margin-top:80px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-lg-start text-muted" style="background-color: #778899;">
